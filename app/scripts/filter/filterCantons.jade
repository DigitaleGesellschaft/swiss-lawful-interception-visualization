.row
	.col-xs-2
		.btn-group.btn-group-lg.split-h
			//- each aFakeCanton, idx in fakeCantons
			button(value='ch', class={active: 'ch'==canton}, class='fake btn btn-default', data-toggle='tooltip', data-placement=('top') title=l('region_txt_ch'))=l('region_txt_ch')
			button(value='ba', class={active: 'ba'==canton}, class='fake btn btn-default', data-toggle='tooltip', data-placement=('bottom') title=l('region_txt_ba'))=l('region_txt_ba_short')
	.col-xs-10
		.btn-group.cantons
			each aCanton in cantons1
				button(value=aCanton, class={active: aCanton==canton}, class='btn btn-default', data-toggle='tooltip', title=l('region_txt_'+aCanton))=aCanton.toUpperCase()
		.btn-group.cantons
			each aCanton in cantons2
				button(value=aCanton, class={active: aCanton==canton}, class='btn btn-default', data-toggle='tooltip', data-placement='bottom' title=l('region_txt_'+aCanton))=aCanton.toUpperCase()